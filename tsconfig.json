{
  "compilerOptions": {
    "target": "es2016",                                                        
    "module": "ES6",                    
    "lib": ["ESNext"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "lib",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution":"NodeNext",
  },
  "include": ["lib/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "output",
    "src"
  ],
}
